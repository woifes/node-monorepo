{
    "organizeImports": {
      "enabled": false
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineWidth": 80,
      "indentSize": 4,
      "ignore": [
        "dist",
        "node_modules",
        "tsconfig*",
        "cspell*"
      ]
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "suspicious": {
          "noExplicitAny": "off"
        },
        "style": {
          "noNonNullAssertion": "off"
        },
        "performance": {
          "noDelete": "off"
        }
      },
      "ignore": [
        "dist",
        "node_modules" 
      ]
    }
  }