{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNEXT",
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
