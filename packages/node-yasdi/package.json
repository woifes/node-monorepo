{
  "name": "@woifes/node-yasdi",
  "version": "1.0.0",
  "description": "Node bindings to yasdi library",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "bin",
    "build",
    "dist",
    "shell"
  ],
  "private": true,
  "bin": {
    "nodeYasdiShell": "./dist/shell/node-yasdi-shell.js",
    "createYasdiIniFileContent": "./dist/shell/createYasdiIniFileContent.js"
  },
  "scripts": {
    "shell": "node ./dist/shell/node-yasdi-shell.js",
    "createIniContent": "node ./dist/shell/createYasdiIniFileContent.js",
    "test": "jest",
    "compile": "tsc -p tsconfig.build.json",
    "prettier": "prettier -w ./src/**/*.ts ./test/**/*.ts ./shell/*.ts ./index.ts",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts ./shell/*.ts ./index.ts --fix",
    "lint:check": "eslint ./src/**/*.ts ./test/**/*.ts ./shell/*.ts ./index.ts",
    "prepare": "pnpm node-gyp configure && pnpm build && pnpm compile",
    "node-gyp": "node-gyp",
    "build": "node-gyp build",
    "rebuild": "node-gyp rebuild",
    "licenseReport": "node ../../node_modules/@woifes/license-report/dist/index.js"
  },
  "author": "woifes",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "debug": "^4.3.2",
    "node-addon-api": "^4.2.0",
    "node-gyp": "^8.3.0",
    "runtypes": "^6.5.1"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.1"
  }
}
